{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/Vind3rr/FIT-3179-Data-Visulisation/main/travel_spend_bubble.csv"},
  "transform": [
    {"filter": "datum.Category !== 'Total'"},
    {"fold": ["AvgPerTrip", "AvgPerNight"], "as": ["Metric", "Value"]},
    {
      "joinaggregate": [
        {"op": "max", "field": "Value", "as": "MaxVal"},
        {"op": "min", "field": "Value", "as": "MinVal"}
      ],
      "groupby": ["Category"]
    }
  ],
  "width": 720,
  "height": 320,
  "encoding": {
    "y": {"field": "Category", "type": "nominal", "sort": "-x", "title": null}
  },
  "layer": [
    {
      "mark": {"type": "rule", "strokeWidth": 3, "opacity": 0.4},
      "encoding": {
        "x": {"field": "MinVal", "type": "quantitative", "title": "Spend ($)"},
        "x2": {"field": "MaxVal"}
      }
    },
    {
      "mark": {"type": "point", "filled": true, "size": 80},
      "encoding": {
        "x": {"field": "Value", "type": "quantitative", "title": "Spend ($)"},
        "color": {
          "field": "Metric",
          "type": "nominal",
          "title": null,
          "scale": {
            "domain": ["AvgPerTrip", "AvgPerNight"],
            "range": ["#9B5DE5", "#F15BB5"]
          }
        },
        "tooltip": [
          {"field": "Category"},
          {"field": "Metric", "title": "Metric"},
          {"field": "Value", "type": "quantitative", "format": ",.0f"}
        ]
      }
    },
    {
      "transform": [
        {"filter": "datum.Metric === 'AvgPerTrip'"},
        {"calculate": "'$' + format(datum.Value, ',.0f')", "as": "LabelTrip"}
      ],
      "mark": {
        "type": "text",
        "baseline": "middle",
        "align": "left",
        "dx": 6,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "y": {"field": "Category", "type": "nominal", "sort": "-x"},
        "x": {"field": "Value", "type": "quantitative"},
        "text": {"field": "LabelTrip"},
        "color": {
          "field": "Metric",
          "type": "nominal",
          "scale": {
            "domain": ["AvgPerTrip", "AvgPerNight"],
            "range": ["#9B5DE5", "#F15BB5"]
          },
          "legend": null
        }
      }
    },
    {
      "transform": [
        {"filter": "datum.Metric === 'AvgPerNight'"},
        {"calculate": "'$' + format(datum.Value, ',.0f')", "as": "LabelNight"}
      ],
      "mark": {
        "type": "text",
        "baseline": "middle",
        "align": "right",
        "dx": -6,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "y": {"field": "Category", "type": "nominal", "sort": "-x"},
        "x": {"field": "Value", "type": "quantitative"},
        "text": {"field": "LabelNight"},
        "color": {
          "field": "Metric",
          "type": "nominal",
          "scale": {
            "domain": ["AvgPerTrip", "AvgPerNight"],
            "range": ["#9B5DE5", "#F15BB5"]
          },
          "legend": null
        }
      }
    },
    {
      "transform": [
        {"filter": "datum.Value === datum.MaxVal"},
        {"calculate": "'Highest'", "as": "NoteMax"}
      ],
      "mark": {
        "type": "text",
        "baseline": "middle",
        "align": "left",
        "dx": 8,
        "fontSize": 12,
        "fontWeight": "bold"
      },
      "encoding": {
        "y": {"field": "Category", "type": "nominal", "sort": "-x"},
        "x": {"field": "Value", "type": "quantitative"},
        "text": {"field": "NoteMax"},
        "color": {
          "field": "Metric",
          "type": "nominal",
          "scale": {
            "domain": ["AvgPerTrip", "AvgPerNight"],
            "range": ["#9B5DE5", "#F15BB5"]
          },
          "legend": null
        }
      }
    },
    {
      "transform": [
        {"filter": "datum.Value === datum.MinVal"},
        {"calculate": "'Lowest'", "as": "NoteMin"}
      ],
      "mark": {
        "type": "text",
        "baseline": "middle",
        "align": "right",
        "dx": -8,
        "fontSize": 12,
        "fontWeight": "bold"
      },
      "encoding": {
        "y": {"field": "Category", "type": "nominal", "sort": "-x"},
        "x": {"field": "Value", "type": "quantitative"},
        "text": {"field": "NoteMin"},
        "color": {
          "field": "Metric",
          "type": "nominal",
          "scale": {
            "domain": ["AvgPerTrip", "AvgPerNight"],
            "range": ["#9B5DE5", "#F15BB5"]
          },
          "legend": null
        }
      }
    }
  ],
  "config": {"axis": {"grid": true}}
}



